@page
@model VynilVerseWebRazor_Temp.Pages.Genres.IndexModel

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Genre List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/genres/create" class="btn btn-primary"><i class="bi bi-plus-square"></i> Add Genre</a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Genre Name
            </th>
            <th>
                Display Order
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var genre in Model.GenreList.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td>@genre.Name</td>
                <td>@genre.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="/genres/edit" asp-route-id="@genre.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-page="/genres/delete" asp-route-id="@genre.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-x-square"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

