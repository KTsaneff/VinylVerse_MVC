@model List<Album>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Album List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Album" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-square"></i> Add Album</a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Album Title
                    </th>
                    <th>
                        Artist
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var album in Model.OrderBy(u => u.Title))
                {
                    <tr>
                        <td>@album.Title</td>
                        <td>@album.Artist</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Album" asp-action="Edit" asp-route-id="@album.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Album" asp-action="Delete" asp-route-id="@album.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-x-square"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="container">
   
</div>
